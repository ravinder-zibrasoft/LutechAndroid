<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearSetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background" 
        >

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/refresh_button_selector"
            android:clickable="true"
            android:layout_margin="6dp"
             />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center"
            android:text="25-Sep-2012"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:background="@drawable/settingbuttonselector"
            android:clickable="true"
            android:gravity="center" android:layout_gravity="right|center_vertical"
             android:layout_margin="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearEventCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>
	<LinearLayout
        android:id="@+id/linearAllDayEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#29000000"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrCities"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/lnrlist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>